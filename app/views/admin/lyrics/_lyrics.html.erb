<% @lyrics.each do |lyric| %>
  <tr>
    <td><%= truncate(lyric.content, :length => 50) %></td>
    <td><%= lyric.user.name %></td>
    <td><%= link_to lyric.song.name, admin_songs_path, title: "Go to Manage songs" %></td>
    <td><%= lyric.created_at %></td>
    <td>
      <% if lyric.accepted? %>
        <i class="fa fa-check icon-acepted"></i>
      <% else %>
        <i class="fa fa-remove icon-unacepted"></i>
      <% end %>
    </td>
    <td>
      <% if logged_in? && lyric.accepted? %>
        <%= link_to t(".unaccept"), unaccept_path(lyric), method: :put %>
      <% else %>
        <%= link_to t(".accept"), accept_path(lyric), method: :put %>
      <% end %>
    </td>
    <td>
      <%= link_to admin_lyric_path(lyric), data: {toggle: "modal", target: "#see_details"},
        remote: true do %>
        <i class="fa fa-eye icon-acepted" title="<%= t '.show' %>"></i>
      <% end %>
      <%= link_to admin_lyric_path(lyric), method: :delete,
        data: {confirm: t(".sure")} do %>
        <i class="fa fa-trash icon-unacepted" title="<%= t '.delete' %>"></i>
      <% end %>
    </td>
  </tr>
<% end %>
<div id="see_details" class="modal fade" role="dialog"></div>
